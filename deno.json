{
  "tasks": {
    "dev": "deno fmt | deno run --watch --allow-all main.js",
    "lint": "deno fmt | deno lint"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
